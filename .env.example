# Odoo configuration
ODOO_CONTAINER_NAME=odoo_app
ODOO_IMAGE=odoo
ODOO_VERSION=17.0
ODOO_PORT=8069
ODOO_ADDONS_PATH=./addons
ODOO_RESTART_POLICY=unless-stopped
ODOO_INSTALL_MODULES=base
ODOO_INIT_DB=True
# For subsequent runs after initialization, comment out the next line or set to empty
ODOO_COMMAND=--init=base --database=postgres

# Odoo healthcheck configuration
ODOO_HEALTHCHECK_INTERVAL=30s
ODOO_HEALTHCHECK_TIMEOUT=10s
ODOO_HEALTHCHECK_RETRIES=3
ODOO_HEALTHCHECK_START_PERIOD=60s

# PostgreSQL configuration
POSTGRES_CONTAINER_NAME=odoo_db
POSTGRES_IMAGE=postgres
POSTGRES_VERSION=15
POSTGRES_DB=postgres
POSTGRES_USER=odoo
POSTGRES_PASSWORD=odoo
POSTGRES_RESTART_POLICY=unless-stopped

# PostgreSQL healthcheck configuration
POSTGRES_HEALTHCHECK_INTERVAL=10s
POSTGRES_HEALTHCHECK_TIMEOUT=5s
POSTGRES_HEALTHCHECK_RETRIES=5